<?xml version="1.0" encoding="utf-8"?>
<layout>
    
    <data>
        <variable
            name="weather"
            type="com.example.natlextest.model.Weather" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="100dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="97dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:background="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_city_name_temp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" android:textStyle="bold"
            android:textColor="@color/black" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.026" app:layout_constraintEnd_toStartOf="@+id/list_chart_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_weather_datetime" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/list_city_name_temp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" android:textColor="@color/black" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.024" app:layout_constraintEnd_toStartOf="@+id/list_chart_icon"/>
        <ImageView
            android:layout_width="62dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_chart"
            android:id="@+id/list_chart_icon" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
